{% assign review_posts = site.posts | where: "tags", "review" %}<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
    xmlns:atom="http://www.w3.org/2005/Atom"
    xmlns:webfeeds="http://webfeeds.org/rss/1.0">
    <channel>
        <title>Tag: review - {{ site.title | xml_escape }}</title>
        <atom:link href="{{ "/feed_review.xml" | absolute_url }}" rel="self" type="application/rss+xml"/>
        <link>{{ "/" | absolute_url }}</link>
        <description>{{ site.description | xml_escape }}</description>
        <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
        <webfeeds:icon>{{ site.theme_settings.avatar | absolute_url }}</webfeeds:icon>
        {% for post in review_posts limit:15 %}
        <item>
            {% if post.thumbnail %}
                <enclosure length="1" type="image" url="{{ post.thumbnail | absolute_url }}"/>
            {% endif %}
            <title>{{ post.title | xml_escape }}</title>
            <link>{{ post.url | absolute_url }}</link>
            <guid isPermaLink="false">{{ post.url | relative_url }}</guid>
            {% if post.tags.size > 0 %}<tags>{% for tag in post.tags %}<tag>{{ tag }}</tag>{% endfor %}</tags>{% endif %}
            <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
            <description>{{ post.content | xml_escape }}</description>
        </item>
        {% endfor %}
    </channel>
</rss>
